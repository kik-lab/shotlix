  body
    header
      a(href="/")
        i(class="far fa-arrow-alt-circle-left")
      h1 RANKING
    main
      .ranking-container
        each rank in ranking
          .ranking
            .ranking-left
              i.fas.fa-crown
              p #{rank.rank}
            .ranking-center
              if rank.name === ""
                h2.name unknown
              else
                h2.name #{rank.name}
            .ranking-right
              p #{rank.score}
