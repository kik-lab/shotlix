    script(async="" src="https://www.googletagmanager.com/gtag/js?id=UA-120739547-7")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-120739547-7');
  body
    header
      a(href="/")
        img(src="/assets/images/back.png")
    a.twitter-share(href="https://twitter.com/share?&hashtags=shotlix&url=https://www.shotlix.app/&text=" + myRank.score + "スコアを獲得し、" + myRank.rank + "位でした。" target="_blank" data-show-count="false")
      img(src="/assets/images/share-alt-light.svg")
    div.container
      h1 Your Score
      .ranking-container.Score__Log
          .ranking
            .ranking-left
              i.fas.fa-crown
              p #{myRank.rank}
            .ranking-center
              h2.name #{myRank.name}
            .ranking-right
              p #{myRank.score}
      h1 Ranking
      .ranking-container
        each rank in ranking
          .ranking
            .ranking-left
              i.fas.fa-crown
              p #{rank.rank}
            .ranking-center
              if rank.name === ""
                h2.name unknown
              else
                h2.name #{rank.name}
            .ranking-right
              p #{rank.score}
