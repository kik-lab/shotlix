doctype html
html(lang="ja")
  head
    // Meta tag
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    // Title
    title shootlix.io
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css")
    link(rel="stylesheet" href="./css/style.css")
    link(href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet")
  body
    .container
      .top-container
        h1.top-container__ttl shootlix.io
        if isPlayed
          h2 Your score was #{score}
          form(action='/game' method='POST')
            input.top-container__name(type="text" placeholder="Enter your name" name='name' autocomplete="off" value=`${name}`)
            input.top-container__submit(type="submit" value="PLAY")
        else
          form(action='/game' method='POST')
            input.top-container__name(type="text" placeholder="Enter your name" name='name' autocomplete="off")
            input.top-container__submit(type="submit" value="PLAY")
